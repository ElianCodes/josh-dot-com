---
import BlogEntry from "../components/BlogEntry.astro";
import TabsAndContent from "../components/TabsAndContent";
import BaseLayout from "../layouts/BaseLayout.astro";

import { getCollection } from "astro:content";

const allBlogPosts = await getCollection("blog");

const defaultValue = "All";

const sections = {
  [defaultValue]: "and a one",
  Interpersonal: "and a two",
  Personal: "and a two",
  Tech: "and a two",
  "TypeScript Contribution Diary": "and a two",
};
---

<BaseLayout>
  <TabsAndContent client:load defaultValue={defaultValue} sections={sections} />
  {
    allBlogPosts.map((post) => {
      return (
        <li>
          <BlogEntry post={post} />
        </li>
      );
    })
  }
</BaseLayout>
