---
import { getCollection } from "astro:content";

import Hero from "../components/Hero.astro";
import { ProjectsTabsAndContent } from "../components/ProjectsTabsAndContent";
import { Text } from "../components/Text";
import BaseLayout from "../layouts/BaseLayout.astro";
import { Squiggly } from "../components/Squiggly";

const allProjects = await getCollection("projects");
---

<BaseLayout title="Projects">
	<Hero class="hero" image="/images/me-thumbs-up.png">
		<Squiggly
			as="h1"
			align="left"
			client:load
			fontSize="title-secondary"
			fontWeight="bolder"
			info="All sorts of fun stuff in here! :3"
			title="Projects"
		/>
		<Text as="p" class="subtitle" fontSize="medium" fontWeight="light">
			I primarily work on static analysis tooling for TypeScript -- projects
			that scrutinize your code without running it.
		</Text>
		<Text as="p" class="subtitle" fontSize="medium" fontWeight="light">
			I also maintain smaller projects that assist with web development tooling
			or adding emoji delighters to sites.
		</Text>
	</Hero>

	<ProjectsTabsAndContent client:load projects={allProjects} />
</BaseLayout>

<style>
	.subtitle {
		margin-top: 2rem;
		max-width: 24rem;
	}

	.projectEntryList {
		margin: 6rem 0;
	}
</style>
