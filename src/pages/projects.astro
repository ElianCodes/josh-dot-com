---
import { getCollection } from "astro:content";

import BodyContents from "../components/BodyContents.astro";
import Hero from "../components/Hero.astro";
import HeroSecondary from "../components/HeroSecondary.astro";
import HeroTertiary from "../components/HeroTertiary.astro";
import { ProjectsGrouped } from "../components/ProjectsGrouped";
import { Squiggly } from "../components/Squiggly";
import BaseLayout from "../layouts/BaseLayout.astro";

const allProjects = await getCollection("projects");
---

<BaseLayout title="Projects">
	<Hero class="hero" image="/images/projects.webp">
		<Squiggly
			as="h1"
			client:load
			fontSize="title"
			fontWeight="bolder"
		>
			Projects
		</Squiggly>
		<HeroSecondary>
			I work primarly on open source tooling for TypeScript projects.
		</HeroSecondary>
		<HeroTertiary>
			I also enjoy emoji-related delighters and the occasional
			game engine or meta-language.
		</HeroTertiary>
	</Hero>

	<BodyContents>
		<ProjectsGrouped client:load projects={allProjects} />
	</BodyContents>
</BaseLayout>

<style>
	.projectEntryList {
		margin: 6rem 0;
	}
</style>
