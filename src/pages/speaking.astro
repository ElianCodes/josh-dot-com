---
import { CollectionEntry, getCollection } from "astro:content";
import Hero from "../components/Hero.astro";
import { ProjectEntryList } from "../components/ProjectEntryList";
import { Text } from "../components/Text";
import BaseLayout from "../layouts/BaseLayout.astro";

const allProjects = await getCollection("projects");
---

<BaseLayout>
	<Hero class="hero" image="/images/speaker.png">
		<Text as="h1" class="wavy" fontSize="title-secondary" fontWeight="bold">
			Speaking
		</Text>
		<Text as="p" class="subtitle" fontSize="medium" fontWeight="light">
			I've been speaking at conferences since 2019 and now regularly present at
			events worldwide.
		</Text>
		<Text as="p" class="subtitle" fontSize="medium" fontWeight="light">
			In 2023 I became a Microsoft MVP for my community education and outreach.
		</Text>
		<Text as="p" class="subtitle" fontSize="small" fontWeight="light">
			Want me to speak at your event? Hooray!
			<br />
			Please see my <a
				class="rider"
				href="https://github.com/JoshuaKGoldberg/speaker-rider">speaker rider</a
			>.
		</Text>
	</Hero>
</BaseLayout>

<style>
	.hero {
		margin-bottom: 4rem;
	}

	.wavy {
		text-decoration: var(--textDecorationWavy) var(--colorEmphasized);
	}

	.subtitle {
		margin-top: 2rem;
		max-width: 24rem;
	}

	.rider {
		text-decoration: underline;
		text-decoration-thickness: 1px;
	}
</style>
