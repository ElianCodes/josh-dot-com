---
export interface Props {
    image: string;
}

const { image } = Astro.props;
---

<div class="hero">
    <div class="half first">
        <img alt="" src={image} />
    </div>
    <div class="half second">
        <slot />
    </div>
</div>

<style>
    .hero {
        display: flex;
        margin: auto;
        height: 25rem;
        position: relative;
        width: var(--mainWidth);
    }

    img {
        display: none;
    }

    @media (min-width: 819px) {
        .half {
            position: relative;
            width: 50%;
        }

        .half.first {
            display: flex;
            justify-content: flex-end;
        }

        img {
            display: block;
            max-width: 100%;
            max-height: 100%;
        }
    }
</style>