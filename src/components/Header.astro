---
import HeaderLinks from "./HeaderLinks.astro";
import { Text } from "./Text";
---

<Text as="header" fontWeight="bolder">
	<div class="floaty">
		Work in progress! Expect missing content & lack of polish.
	</div>
	<a class:list={[Astro.url.pathname.length <= 1 && "current"]} href="/"
		>Josh Goldberg</a
	>
	<HeaderLinks />
</Text>

<style>
	header {
		align-items: center;
		display: flex;
		flex-direction: column;
		gap: 1rem;
		padding: 2rem;
		justify-content: space-between;
		font-size: var(--fontSizeMedium);
	}

	.floaty {
		background: var(--colorEmphasized);
		color: var(--colorBackgroundBottom);
		filter: invert();
		padding: 0.25rem 0.5rem;
		position: fixed;
		right: 0;
		top: 0;
	}

	@media (min-width: 819px) {
		header {
			flex-direction: row;
			padding: 2rem 0;
		}

		.current {
			color: var(--colorEmphasized);
			text-decoration: var(--textDecorationWavy);
		}
	}
</style>
