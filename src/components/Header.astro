---
const links = [
  ["Blog", "/blog"],
  ["Book", "https://learningtypescript.com"],
  ["Projects", "/projects"],
  ["Speaking", "/speaking"],
  ["Sponsor", "/sponsor"],
];

console.log("my pathname is", Astro.url.pathname);
---

<header>
  <a href="/">Josh Goldberg</a>
  <div class="links">
    {
      links.map(([text, href]) => (
        <a
          class:list={["link", Astro.url.pathname.startsWith(href) && "current"]}
          href={href}
        >
          {text}
        </a>
      ))
    }
  </div>
</header>

<style>
  @layer header {
    header {
      align-items: center;
      display: flex;
      flex-direction: column;
      font-weight: bold;
      gap: 1rem;
      justify-content: space-between;
      font-size: var(--font-size-medium);
      margin: auto;
      max-width: var(--mainWidth);
      padding: 1rem 2rem;
      width: 100%;
    }

    .links {
      display: flex;
      gap: 1rem;
    }

    .current {
      color: var(--color-emphasized);
    }

    @media (min-width: 819px) {
      header {
        flex-direction: row;
      }
    }
  }
</style>
