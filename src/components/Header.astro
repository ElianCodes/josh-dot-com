---
import HeaderLinks from "./HeaderLinks.astro";
import { SquigglyIfActive } from "./SquigglyIfActive";
import { Text } from "./Text";

const title = "Josh Goldberg";
---

<Text as="header" class="header" fontWeight="bolder">
	<SquigglyIfActive
		active={Astro.url.pathname.length <= 1}
		as="a"
		client:load
		href="/"
	>
		{title}
	</SquigglyIfActive>
	<HeaderLinks />
</Text>

<style>
	.header {
		align-items: center;
		display: flex;
		flex-direction: column;
		gap: 1rem;
		padding: 2rem;
		justify-content: space-between;
		font-size: var(--fontSizeMedium);
	}

	@media (min-width: 819px) {
		.header {
			flex-direction: row;
		}
	}

	@media (min-width: 1017px) {
		.header {
			padding: 2rem 0;
		}
	}
</style>
