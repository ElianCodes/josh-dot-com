---
import clsx from "clsx";
import HeaderLinks from "./HeaderLinks.astro";
import { Text } from "./Text";

const title = "Josh Goldberg";
---

<Text as="header" class="header" fontWeight="bolder">
	<a
		class={clsx(Astro.url.pathname.length <= 1 && "squigglyActive")}
		href="/"
	>
		{title}
</a>
	<HeaderLinks />
</Text>

<style>
	.header {
		align-items: center;
		display: flex;
		flex-direction: column;
		gap: 1rem;
		padding: 2rem;
		justify-content: space-between;
		font-size: var(--fontSizeMedium);
	}

	.squigglyActive {
		display: none;
	}

	@media (min-width: 819px) {
		.header {
			flex-direction: row;
		}

		.squigglyActive {
			display: initial;
		}

	}

	@media (min-width: 1017px) {
		.header {
			padding: 2rem 0;
		}
	}
</style>
